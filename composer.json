{
    "name": "zntpl/telegram-client",
    "minimum-stability":"dev",
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "6.*",

        "znsandbox/telegram": "dev-master",
        "zncore/db": "dev-master",
        "zncore/ddd": "dev-master",

        "symfony/cache": "^5.2@dev",
        "symfony/validator": "4.*",
        "workerman/workerman": "^4.0",

        "php7fork/danog_madelineproto": "v0.0.3"
    },
    "require-dev": {
        "zntool/dev": "dev-master",
        "zntool/test": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "MyBundles\\Top\\": "vendor/my-bundles/top/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/znsandbox/telegram"
        },
        {
            "type": "git",
            "url": "https://github.com/php7fork/danog_madelineproto.git"
        }
    ]
}
